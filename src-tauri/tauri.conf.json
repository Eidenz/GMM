{
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "devPath": "http://localhost:1420",
    "distDir": "../dist",
    "withGlobalTauri": true
  },
  "package": {
    "productName": "Genshin Mod Manager",
    "version": "0.1.0"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "fs": {
        "all": true,
        "scope": ["**"]
      },
      "path": { "all": true },
      "shell": {
        "all": false,
        "open": true,
        "execute": true,
        "scope": [
          { "name": "execute-any-file", "cmd": "{0}", "args": [], "sidecar": false },
          { "name": "open-explorer-windows", "cmd": "explorer", "args": ["{0}"] },
          { "name": "open-finder-macos", "cmd": "open", "args": ["{0}"] },
          { "name": "open-filemanager-linux", "cmd": "xdg-open", "args": ["{0}"] }
        ]
      },
      "window": { "all": true },
      "dialog": { "all": true },
      "process": { "exit": true }
    },
    "bundle": {
      "active": true,
      "identifier": "GenshinModManager",
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "windows": {
         "certificateThumbprint": null,
         "digestAlgorithm": "sha256",
         "timestampUrl": ""
      }
    },
    "security": {
      "csp": null
    },
    "windows": [
      {
        "label": "main",
        "title": "Genshin Mod Manager",
        "width": 1280,
        "height": 768,
        "minWidth": 900,
        "minHeight": 650,
        "resizable": true,
        "fullscreen": false,
        "decorations": true,
        "visible": true,
        "center": true
      }
    ]
  }
}